<snippet>
	<content><![CDATA[
# check needed stuff
NEEDED:
for my \$Needed ( qw($1) ) {

    next NEEDED if defined \$Param{ \$Needed };

    \$Self->{LogObject}->Log(
        Priority => 'error',
        Message  => "Parameter '\$Needed' is needed!",
    );
    return;
}
]]></content>
    <tabTrigger>otrs.needed.Self</tabTrigger>
</snippet>
